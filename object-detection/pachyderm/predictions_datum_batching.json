{
    "pipeline": {
        "name": "predictions"
    },
    "description": "Predict bounding boxes on images.",
    "input": {
        "cross": [
            {
                "pfs": {
                    "repo": "inference_images",
                    "glob": "/*"
                }
            },
            {
                "pfs": {
                    "repo": "model",
                    "glob": "/"
                }
            }
        ]
    },
    "transform": {
        "cmd": [
            "python", "predict.py", "--datum-batching",
            "--model", "/pfs/model/object_detection_model.pt",
            "--data-dir", "/pfs/inference_images/",
            "--output-dir", "/pfs/out/"
        ],
        "image": "bonenfan5ben/obj-det:04",
        "datum_batching": true
    }
}
